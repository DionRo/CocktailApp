<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailAppV10.Views.SettingsPage"
             Title="Settings">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Order="Secondary" Priority="0" Text="Achievements" Clicked="OnAchievementButtonClick"/>
        <ToolbarItem  Order="Secondary" Priority="1" Text="Cocktails" Clicked="OnCocktailButtonClick"/>
        <ToolbarItem  Order="Secondary" Priority="2" Text="EULA" Clicked="OnEulaButtonClick"/>
        <ToolbarItem  Order="Secondary" Priority="3" Text="Logout" Clicked="OnLogoutButtonClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Language Dutch"></Label>
                <Switch IsToggled="False" Toggled="Switch_Toggled"></Switch>
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Language English"></Label>
                <Switch IsToggled="False" Toggled="Switch_Toggled"></Switch>
            </StackLayout>
            <Image WidthRequest="600" HeightRequest="50" Source="nix18.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>